@model IEnumerable<Beml.ECommerce.App.Models.ApplicationType>
@{
    ViewData["Title"] = "Application Type";
}
<partial name="_Notifications" />
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1><span class="text-primary">Application Type List</span></h1>
        </div>
        <div class="col-4 text-end">
            <h1>
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>&nbsp;&nbsp;Add Button
                </a>
            </h1>
        </div>
    </div>
</div>
<br />
<br />
@if(Model.Count()>0){

<table class="table table-bordered table-striped">
    <thead class="text-primary text-opacity-75">
    <th style="wi">Application Name</th>
    <th></th>
    </thead>


    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td width="30%">
                    <div class="btn-group w-75">
                        <a asp-controller="ApplicationType" asp-action="Update" asp-route-Id="@obj.ApplicationId" class="btn btn-primary mx-1 p-1 vw-50">
                            <i class="fa-solid fa-pen"></i>&nbsp;&nbsp;Edit
                        </a>
                        <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.ApplicationId" class="btn btn-danger mx-1 p-1 vw-50">
                            <i class="fa-solid fa-trash"></i>&nbsp;&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
}
else{
    <p>No Application Type Available.</p>
}