@model IEnumerable<Beml.ECommerce.App.Models.Product>
@{
    ViewData["Title"] = "Product";
}
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1><span class="text-primary">Product List</span></h1>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary mx-1 p-1 vw-50">
                <i class="fa-solid fa-pen"></i>&nbsp;Create
            </a>
        </div>
    </div>
</div>
<br />
<br />

@if(Model.Count()>0){
    <table class="table table-bordered table-striped">
    <thead class="text-primary text-opacity-75">
    <th>Product Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category Type</th>
    <th>Application Type</th>

    <th></th>
    </thead>


    <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="12%">@obj.Name</td>
                <td width="12%">@Html.Raw(obj.Description)</td>
                <td width="12%">@obj.Price</td>
                <td width="20%">@obj.Category.Name</td>
                <td width="14%">@obj.ApplicationType.Name</td>

                    <td width="30%">
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.ProductId" class="btn btn-primary mx-1 p-1 vw-50">
                            <i class="fa-solid fa-pen"></i>&nbsp;Update
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.ProductId" class="btn btn-danger mx-1 p-1 vw-50">
                            <i class="fa-solid fa-trash"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>

            }
    </tbody>
</table>
}
else {
    <p>No Product Available.</p>

}
    