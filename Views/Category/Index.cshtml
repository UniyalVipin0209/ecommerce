@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1><span class="text-primary">Category List</span></h1>
        </div>
        <div class="col-4 text-end">
             <h1>
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>&nbsp;Create New Category
                </a>
             </h1>
        </div>
    </div>
</div>
<br /><br/>

@if(Model.Count()>0)
{
<table class="table table-bordered table-striped">
    <thead class="text-primary text-opacity-75">
    <th>Category Name</th>
    <th>Display Order</th>
    <th>Created On</th>
    <thead>
    </thead>


    <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="30%">@obj.Name</td>
                <td width="20%">@obj.DisplayOrder</td>
                <td width="20%">@obj.CreatedTime</td>
                <td width="30%">
                    <div class="btn-group w-75">
                        <a asp-controller="Category" asp-action="Update" asp-route-Id="@obj.CategoryId" class="btn btn-primary mx-1 p-1 vw-50">
                            <i class="fa-solid fa-pen"></i>&nbsp;Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.CategoryId" class="btn btn-danger mx-1 p-1 vw-50">
                            <i class="fa-solid fa-trash"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>

            }
    </tbody>
</table>
}
else {
<p>No Category Available.</p>

}

